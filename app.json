{
  "expo": {
    "orientation": "default",
    "scheme": "acme",
    "userInterfaceStyle": "automatic",
    "android": {
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take photos with your selected lens."
      }
    },
    "experiments": {
      "reactCompiler": true
    },
    "plugins": [
      "expo-font",
      "expo-image",
      "expo-router",
      "expo-web-browser",
      "@bacons/apple-colors",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to take photos."
        }
      ]
    ]
  }
}
